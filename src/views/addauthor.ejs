            <form method="GET" <% if(flag==1) {%> action="/admin/addauthor/edit/<%=author._id%>"  <%} else {%> action="/admin/addauthor/add" <%} %> >
              <label >Name</label>
              <input type="text" name="Name"  id="authorName" autocomplete="off"

                  placeholder="Name" required <% if(flag==1) {%> value="<%=author.Name%>" <%} %> >   
              <label class="validateLabel" id="reqBookName" ></label>
              <br>
              <label >Country</label>

              <input type="text" name="Country"   id="authorCountry" autocomplete="off"

                  placeholder="Country" required <% if(flag==1) {%> value="<%=author.Country%>" <%} %> >
              <label class="validateLabel" id="reqBookCountry"></label>
              <br>   
              <label >Image Url</label>
              

              <input type="text" name="ImageUrl"  id="authorImage" autocomplete="off" placeholder="Image Url" required <% if(flag==1) {%> value="<%=author.ImageUrl%>" <%} %> >
              <label class="validateLabel" id="reqBookImage"></label>
              <br>
              <% if(flag==1) { %> <input type="submit" value="Edit author">  <%} else {%>  <input type="submit" value="Add author"> <%} %>
